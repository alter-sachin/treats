<style>
#taxonomies {
    display: inline-flex;
    width: 100%;
    height: 50px;
}

.taxonomy-root {
    display: block;
    position: relative;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 15px;
    font-family: 'Oswald';
    line-height: 38px;
    margin: auto;
}


</style>
<div id="spree-header" >
  <header id="header" data-hook>
    <div class="container">
      <div class="row">
        <figure id="logo" class="col-md-4 col-sm-1" data-hook>
          <%= logo %>
        </figure>
        <%= render :partial => 'spree/shared/nav_bar' %>
      </div>
    </div>
  </header>
  <div class="container">
    <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
  </div>
</div>
